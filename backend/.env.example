# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/staya_booking
MONGODB_TEST_URI=mongodb://localhost:27017/staya_booking_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_secure
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRE=30d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=STAYA Bookings <noreply@staya.com>

# SMS Configuration (Optional - for Nigerian SMS providers)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=STAYA

# Payment Gateways
# Paystack (Nigerian payment processor)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Stripe (International payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Flutterwave (Alternative Nigerian payment)
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
WEATHER_API_KEY=your_weather_api_key

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
FRONTEND_URL=http://localhost:5173
ADMIN_URL=http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Nigerian Travel APIs (if available)
ABC_TRANSPORT_API_KEY=your_abc_transport_api_key
PEACE_MASS_API_KEY=your_peace_mass_api_key
AIRPEACE_API_KEY=your_airpeace_api_key

# WhatsApp Business API (Optional)
WHATSAPP_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_ID=your_phone_number_id
